---
// src/pages/tienda/coach-podcast-blog.astro
import BaseLayout from '../../layouts/BaseLayout.astro';
import '../../styles/product-pages.css';

const paginas = [
  'Home',
  'Sobre mí',
  'Servicios',
  'Blog',
  'Post individual',
  'Recursos',
  'Contacto',
  'Legal básico',
];

const faqs = [
  {
    q: '¿Necesito saber programar?',
    a: 'No. Todo se edita visualmente en Framer.',
  },
  {
    q: '¿Puedo añadir mi propio blog?',
    a: 'Sí. La plantilla incluye una sección de blog y página de post individual lista para publicar.',
  },
  {
    q: '¿Funciona bien en móvil?',
    a: 'Sí. Está diseñada mobile-first.',
  },
  {
    q: '¿Incluye dominio y hosting?',
    a: 'No. Eso se gestiona desde Framer, pero te explico cómo hacerlo.',
  },
  {
    q: '¿Puedo usarla para clientes?',
    a: 'Sí, con licencia por proyecto.',
  },
  {
    q: '¿Hay reembolsos?',
    a: 'Al ser producto digital descargable, no hay reembolsos tras la entrega.',
  },
];
---

<BaseLayout
  title="Coach / Podcast / Blog — Plantilla Framer | AndreaFusion"
  description="Plantilla web para marcas personales que guían a la acción. Autoridad clara, estructura que convierte. Lista para editar en Framer."
>
  <main class="bp-page">

    <!-- ══════════════════════════════════════
         1) HERO
    ══════════════════════════════════════ -->
    <header class="bp-hero">
      <div class="bp-hero__inner">

        <a href="/tienda" class="bp-hero__back" aria-label="Volver a la tienda">
          <span aria-hidden="true">←</span> Tienda
        </a>

        <p class="bp-hero__eyebrow">Framer Website Template</p>

        <h1 class="bp-hero__title">Coach / Podcast / Blog</h1>

        <!-- sub ajustado: refuerza "autoridad" + "guía a la acción" -->
        <p class="bp-hero__sub">
          Para marcas personales que generan autoridad y guían a la acción.
        </p>

        <p class="bp-hero__texto">
          Estructura clara. Mensaje directo. Espacio para contenido.<br />
          Montas tu web en una tarde y empiezas a posicionarte como referente.
        </p>

        <ul class="bp-hero__bullets" aria-label="Características principales">
          <li class="bp-hero__bullet">
            <span class="bp-hero__bullet-icon" aria-hidden="true">—</span>
            <span><strong class="bp-bullet__title">8–10 páginas completas.</strong> Listas para editar desde el primer día.</span>
          </li>
          <li class="bp-hero__bullet">
            <span class="bp-hero__bullet-icon" aria-hidden="true">—</span>
            <span><strong class="bp-bullet__title">Contenido integrado.</strong> Blog o sección de podcast incluida en la estructura.</span>
          </li>
          <li class="bp-hero__bullet">
            <span class="bp-hero__bullet-icon" aria-hidden="true">—</span>
            <span><strong class="bp-bullet__title">Estructura que convierte.</strong> Pensada para generar confianza antes de pedir acción.</span>
          </li>
        </ul>

        <div class="bp-hero__ctas">
          <a href="#" class="bp-cta bp-cta--primary bp-cta--disabled" aria-disabled="true" tabindex="-1">
            Demo próximamente
          </a>
          <a
            href="https://andreafusion.gumroad.com/l/earlyaccess"
            target="_blank"
            rel="noopener noreferrer"
            class="bp-cta bp-cta--secondary"
          >
            Quiero el early access
          </a>
        </div>

      </div>
      <div class="bp-hero__deco" aria-hidden="true"></div>
    </header>

    <div class="bp-body">
      <div class="bp-body__inner">

        <!-- ══════════════════════════════════════
             2) SHOWCASE
        ══════════════════════════════════════ -->
        <section class="bp-showcase" aria-label="Vista previa de la plantilla">
          <div class="bp-showcase__texto">
            <p class="section-num">Vista previa</p>
            <h2 class="bp-showcase__titulo">
              Diseñada para que tu mensaje sea el protagonista.
            </h2>
            <p class="bp-showcase__desc">
              Nada de diseño que distrae.<br />
              Aquí primero se entiende quién eres y qué ofreces.
            </p>
          </div>

          <div class="bp-showcase__mocks" aria-label="Mockups de la plantilla">
            <div class="bp-mock bp-mock--desktop">
              <div class="bp-mock__wrapper">
                <span class="bp-mock__label" aria-hidden="true">Desktop</span>
                <div class="bp-mock__screen">
                  <div class="bp-mock__bar" aria-hidden="true">
                    <span></span><span></span><span></span>
                  </div>
                  <div class="bp-mock__canvas">
                    <div class="bp-mock__blob" aria-hidden="true"></div>
                    <div class="bp-mock__grain" aria-hidden="true"></div>
                    <div class="bp-mock__ui" aria-hidden="true">
                      <div class="bp-mock__ui-nav"></div>
                      <div class="bp-mock__ui-hero"></div>
                      <div class="bp-mock__ui-row">
                        <div class="bp-mock__ui-card"></div>
                        <div class="bp-mock__ui-card"></div>
                        <div class="bp-mock__ui-card"></div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="bp-mock bp-mock--mobile">
              <div class="bp-mock__wrapper">
                <span class="bp-mock__label" aria-hidden="true">Mobile</span>
                <div class="bp-mock__phone">
                  <div class="bp-mock__phone-notch" aria-hidden="true"></div>
                  <div class="bp-mock__phone-canvas">
                    <div class="bp-mock__blob" aria-hidden="true"></div>
                    <div class="bp-mock__grain" aria-hidden="true"></div>
                    <div class="bp-mock__ui" aria-hidden="true">
                      <div class="bp-mock__ui-hero bp-mock__ui-hero--sm"></div>
                      <div class="bp-mock__ui-card bp-mock__ui-card--full"></div>
                      <div class="bp-mock__ui-card bp-mock__ui-card--full"></div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- ══════════════════════════════════════
             3) PARA QUIÉN ES
        ══════════════════════════════════════ -->
        <section class="bp-quien" aria-label="Para quién es esta plantilla">
          <div class="bp-quien__inner">
            <div class="bp-quien__header">
              <p class="section-num">Para quién es</p>
              <h2 class="bp-quien__titulo">Perfecta para…</h2>
            </div>
            <ul class="bp-quien__lista" aria-label="Perfiles ideales">
              <li class="bp-quien__item">
                <span class="bp-quien__check" aria-hidden="true">✔</span>
                Coaches y mentoras
              </li>
              <li class="bp-quien__item">
                <span class="bp-quien__check" aria-hidden="true">✔</span>
                Podcasters
              </li>
              <li class="bp-quien__item">
                <span class="bp-quien__check" aria-hidden="true">✔</span>
                Creadoras de contenido
              </li>
              <li class="bp-quien__item">
                <span class="bp-quien__check" aria-hidden="true">✔</span>
                Profesionales que venden conocimiento
              </li>
              <li class="bp-quien__item">
                <span class="bp-quien__check" aria-hidden="true">✔</span>
                Marcas personales en crecimiento
              </li>
            </ul>
            <p class="bp-quien__micro">
              Si tu negocio vive de tu mensaje, esta estructura lo sostiene.
            </p>
          </div>
        </section>

        <!-- ══════════════════════════════════════
             4) PÁGINAS INCLUIDAS
        ══════════════════════════════════════ -->
        <section class="bp-paginas" aria-label="Páginas incluidas en la plantilla">
          <p class="section-num">Páginas incluidas</p>
          <h2 class="bp-paginas__titulo">Páginas incluidas</h2>
          <ul class="bp-paginas__grid" role="list">
            {paginas.map((p, i) => (
              <li class="bp-paginas__item">
                <span class="bp-paginas__num" aria-hidden="true">0{i + 1}</span>
                <span>{p}</span>
              </li>
            ))}
          </ul>
          <p class="bp-paginas__micro">No son páginas sueltas. Es un recorrido pensado.</p>
        </section>

        <!-- ══════════════════════════════════════
             5) PROOF BLOCK
        ══════════════════════════════════════ -->
        <aside class="bp-proof" aria-label="Qué esperar de esta plantilla">
          <p class="bp-proof__label">Qué esperar</p>
          <p class="bp-proof__texto">
            "Cuando tu web genera autoridad: la persona que llega ya viene convencida. Solo necesita saber cómo empezar contigo."
          </p>
        </aside>

        <!-- ══════════════════════════════════════
             6) ESTRUCTURA PARA CONVERTIR
        ══════════════════════════════════════ -->
        <section class="bp-estructura" aria-label="Estructura pensada para convertir">
          <div class="bp-estructura__inner">
            <div class="bp-estructura__texto">
              <p class="section-num-light">Por qué convierte</p>
              <h2 class="bp-estructura__titulo">
                No es solo bonita.<br />Está pensada.
              </h2>
              <p class="bp-estructura__desc">
                Cada sección tiene una función.<br />
                Primero claridad.<br />
                Después prueba social.<br />
                Luego acción.
              </p>
            </div>
            <ul class="bp-estructura__bullets" aria-label="Principios de estructura">
              <li class="bp-estructura__bullet">
                <span class="bp-estructura__dash" aria-hidden="true">—</span>
                <span><strong class="bp-bullet__title">Hero con propuesta directa.</strong> Queda claro quién eres en 5 segundos.</span>
              </li>
              <li class="bp-estructura__bullet">
                <span class="bp-estructura__dash" aria-hidden="true">—</span>
                <span><strong class="bp-bullet__title">Autoridad antes que servicios.</strong> Genera confianza antes de pedir acción.</span>
              </li>
              <li class="bp-estructura__bullet">
                <span class="bp-estructura__dash" aria-hidden="true">—</span>
                <span><strong class="bp-bullet__title">Servicios que guían a decidir.</strong> Estructura pensada para reducir fricción.</span>
              </li>
              <li class="bp-estructura__bullet">
                <span class="bp-estructura__dash" aria-hidden="true">—</span>
                <span><strong class="bp-bullet__title">CTAs coherentes y repetidos.</strong> Sin presión, sin perder el momento.</span>
              </li>
              <li class="bp-estructura__bullet">
                <span class="bp-estructura__dash" aria-hidden="true">—</span>
                <span><strong class="bp-bullet__title">Scroll fluido.</strong> Sin distracciones que interrumpan el mensaje.</span>
              </li>
            </ul>
          </div>
        </section>

        <!-- ══════════════════════════════════════
             7) QUÉ LA HACE DIFERENTE
        ══════════════════════════════════════ -->
        <section class="bp-diferente" aria-label="Qué la hace diferente">
          <div class="bp-diferente__inner">
            <div class="bp-diferente__texto">
              <p class="section-num">Qué la hace diferente</p>
              <h2 class="bp-diferente__titulo">
                No es otra plantilla aesthetic.
              </h2>
              <p class="bp-diferente__desc">
                Muchas webs personales parecen diarios.<br />
                Aquí es estrategia.
              </p>
            </div>
            <ul class="bp-diferente__bullets" aria-label="Diferenciadores">
              <li class="bp-diferente__bullet">
                <span class="bp-diferente__dash" aria-hidden="true">—</span>
                <span><strong class="bp-bullet__title">Posicionamiento desde el primer bloque.</strong> Jerarquía pensada para la autoridad.</span>
              </li>
              <li class="bp-diferente__bullet">
                <span class="bp-diferente__dash" aria-hidden="true">—</span>
                <span><strong class="bp-bullet__title">Contenido como activo.</strong> Sección de blog/podcast integrada estratégicamente.</span>
              </li>
              <li class="bp-diferente__bullet">
                <span class="bp-diferente__dash" aria-hidden="true">—</span>
                <span><strong class="bp-bullet__title">Copy guiado.</strong> Sabrás qué escribir en cada sección.</span>
              </li>
              <li class="bp-diferente__bullet">
                <span class="bp-diferente__dash" aria-hidden="true">—</span>
                <span><strong class="bp-bullet__title">Mobile-first real.</strong> Tu audiencia te lee desde el móvil.</span>
              </li>
            </ul>
          </div>
        </section>

        <!-- ══════════════════════════════════════
             8) EDITARLA ES FÁCIL + CTA INTERMEDIO
        ══════════════════════════════════════ -->
        <section class="bp-editar" aria-label="Cómo editar la plantilla">
          <div class="bp-editar__inner">
            <div class="bp-editar__texto">
              <p class="section-num">Sin código</p>
              <h2 class="bp-editar__titulo">¿Y si no soy técnica?</h2>
              <p class="bp-editar__desc">
                Cambias textos, imágenes y colores en Framer sin tocar código.
              </p>
              <ul class="bp-editar__includes" aria-label="Incluye">
                <li class="bp-editar__include">
                  <span class="bp-editar__check" aria-hidden="true">✔</span>
                  Guía paso a paso
                </li>
                <li class="bp-editar__include">
                  <span class="bp-editar__check" aria-hidden="true">✔</span>
                  Checklist de publicación
                </li>
                <li class="bp-editar__include">
                  <span class="bp-editar__check" aria-hidden="true">✔</span>
                  Soporte por email
                </li>
              </ul>
              <p class="bp-editar__micro">
                No necesitas convertirte en diseñadora. Solo necesitas intención.
              </p>
            </div>
            <div class="bp-editar__cta-wrap">
              <a
                href="https://andreafusion.gumroad.com/l/earlyaccess"
                target="_blank"
                rel="noopener noreferrer"
                class="bp-cta bp-cta--lime"
              >
                Quiero el early access
              </a>
              <p class="bp-editar__cta-micro">Las primeras salen con precio especial.</p>
            </div>
          </div>
        </section>

        <!-- ══════════════════════════════════════
             9) FAQ
        ══════════════════════════════════════ -->
        <section class="bp-faq" aria-label="Preguntas frecuentes">
          <p class="section-num">FAQ</p>
          <h2 class="bp-faq__titulo">Preguntas frecuentes</h2>
          <dl class="bp-faq__lista">
            {faqs.map((faq, i) => (
              <div class="bp-faq__item">
                <dt>
                  <button
                    class="bp-faq__pregunta"
                    aria-expanded="false"
                    aria-controls={`bp-faq-resp-${i}`}
                    id={`bp-faq-btn-${i}`}
                  >
                    <span>{faq.q}</span>
                    <span class="bp-faq__icono" aria-hidden="true">+</span>
                  </button>
                </dt>
                <dd
                  class="bp-faq__respuesta"
                  id={`bp-faq-resp-${i}`}
                  role="region"
                  aria-labelledby={`bp-faq-btn-${i}`}
                  hidden
                >
                  <p>{faq.a}</p>
                </dd>
              </div>
            ))}
          </dl>
        </section>

        <!-- ══════════════════════════════════════
             10) CTA FINAL
        ══════════════════════════════════════ -->
        <section class="bp-cta-final" aria-label="Llamada a la acción final">
          <div class="bp-cta-final__inner">
            <h2 class="bp-cta-final__titulo">
              Tu mensaje merece una estructura a la altura.
            </h2>
            <p class="bp-cta-final__texto">
              Si quieres que te tomen en serio,<br />
              tu web también debe hacerlo.
            </p>
            <a
              href="https://andreafusion.gumroad.com/l/earlyaccess"
              target="_blank"
              rel="noopener noreferrer"
              class="bp-cta bp-cta--lime"
            >
              Quiero el early access
            </a>
            <p class="bp-cta-final__micro">Las primeras salen con precio especial.</p>
          </div>
        </section>

      </div>
    </div>

  </main>
</BaseLayout>

<script>
  const faqBtns = document.querySelectorAll<HTMLButtonElement>('.bp-faq__pregunta');
  faqBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const isExpanded = btn.getAttribute('aria-expanded') === 'true';
      const targetId = btn.getAttribute('aria-controls');
      const respuesta = targetId ? document.getElementById(targetId) : null;
      faqBtns.forEach(b => {
        const otherId = b.getAttribute('aria-controls');
        const other = otherId ? document.getElementById(otherId) : null;
        b.setAttribute('aria-expanded', 'false');
        const icon = b.querySelector<HTMLElement>('.bp-faq__icono');
        if (icon) icon.textContent = '+';
        if (other && other !== respuesta) {
          other.style.maxHeight = '0';
          setTimeout(() => { if (other) other.hidden = true; }, 280);
        }
      });
      if (!isExpanded && respuesta) {
        btn.setAttribute('aria-expanded', 'true');
        const icon = btn.querySelector<HTMLElement>('.bp-faq__icono');
        if (icon) icon.textContent = '×';
        respuesta.hidden = false;
        respuesta.style.maxHeight = respuesta.scrollHeight + 'px';
      } else if (respuesta) {
        respuesta.style.maxHeight = '0';
        setTimeout(() => { if (respuesta) respuesta.hidden = true; }, 280);
      }
    });
  });
</script>

<style>
  /* Scoped: blob Coach — uva + rosa, propio de esta página */
  .bp-mock__blob {
    background: radial-gradient(
      ellipse 80% 70% at 65% 45%,
      rgba(122, 58, 154, 0.22),
      rgba(245, 184, 208, 0.2) 50%,
      transparent 75%
    );
  }
</style>