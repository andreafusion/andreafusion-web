            <div class="ea-banner__texto">
              <h2 class="ea-banner__titulo">¿Quieres el descuento de lanzamiento?</h2>
              <p class="ea-banner__sub">
                Descarga el checklist y te aviso antes que nadie cuando salgan.<br />
                Los primeros salen con precio especial.
              </p>
            </div>
            <a
              href="https://andreafusion.gumroad.com/l/earlyaccess"
              target="_blank"
              rel="noopener noreferrer"
              class="ea-banner__btn"
            >
              Entrar al early access
            </a>
          </div>
        </section>

        <!-- ══════════════════════════════════════
             G) FAQ
        ══════════════════════════════════════ -->
        <section class="faq" aria-label="Preguntas frecuentes">
          <p class="section-num">FAQ</p>
          <h2 class="faq__titulo">Preguntas frecuentes</h2>
          <dl class="faq__lista">
            {faqs.map((faq, i) => (
              <div class="faq__item">
                <dt>
                  <button
                    class="faq__pregunta"
                    aria-expanded="false"
                    aria-controls={`faq-respuesta-${i}`}
                    id={`faq-btn-${i}`}
                  >
                    <span>{faq.q}</span>
                    <span class="faq__icono" aria-hidden="true">+</span>
                  </button>
                </dt>
                <dd
                  class="faq__respuesta"
                  id={`faq-respuesta-${i}`}
                  role="region"
                  aria-labelledby={`faq-btn-${i}`}
                  hidden
                >
                  <p>{faq.a}</p>
                </dd>
              </div>
            ))}
          </dl>
        </section>

        <!-- ══════════════════════════════════════
             H) CTA FINAL MINI
        ══════════════════════════════════════ -->
        <section class="cta-final" aria-label="Llamada a la acción final">
          <p class="cta-final__frase">
            Los primeros en llegar se quedan con el mejor precio.
          </p>
          <a
            href="https://andreafusion.gumroad.com/l/earlyaccess"
            target="_blank"
            rel="noopener noreferrer"
            class="cta-final__btn"
          >
            Entrar al early access
          </a>
        </section>

      </div>
    </div>

  </main>
</BaseLayout>

<!-- ══════════════════════════════════════
     FAQ ACCORDION — vanilla JS mínimo
══════════════════════════════════════ -->
<script>
  const faqBtns = document.querySelectorAll<HTMLButtonElement>('.faq__pregunta');

  faqBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const expanded = btn.getAttribute('aria-expanded') === 'true';
      const targetId = btn.getAttribute('aria-controls');
      const respuesta = targetId ? document.getElementById(targetId) : null;

      // Cierra todos los demás
      faqBtns.forEach(b => {
        const otherId = b.getAttribute('aria-controls');
        const other = otherId ? document.getElementById(otherId) : null;
        b.setAttribute('aria-expanded', 'false');
        const icon = b.querySelector<HTMLElement>('.faq__icono');
        if (icon) icon.textContent = '+';
        if (other && other !== respuesta) {
          other.hidden = true;
          other.style.maxHeight = '0';
        }
      });

      // Abre/cierra el actual
      if (!expanded && respuesta) {
        btn.setAttribute('aria-expanded', 'true');
        const icon = btn.querySelector<HTMLElement>('.faq__icono');
        if (icon) icon.textContent = '×';
        respuesta.hidden = false;
        // Anima alto
        respuesta.style.maxHeight = respuesta.scrollHeight + 'px';
      } else if (respuesta) {
        respuesta.style.maxHeight = '0';
        setTimeout(() => { respuesta.hidden = true; }, 280);
      }
    });
  });
</script>

