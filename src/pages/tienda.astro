                    <!-- Tags arriba -->
                    <ul class="plantilla-card__tags" aria-label="Categoría">
                      {p.tags.map(tag => (
                        <li class="plantilla-card__tag">{tag}</li>
                      ))}
                    </ul>

                    <h2 class="plantilla-card__titulo">{p.titulo}</h2>
                    <p class="plantilla-card__para-quien">{p.paraQuien}</p>

                    <!-- Bullets -->
