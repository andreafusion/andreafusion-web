---
// src/sections/PortfolioSection.astro
// Home — 4 proyectos destacados en grid.

import { featuredProjects } from '../data/projects';
import BugSquasher from '../components/BugSquasher.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import PortfolioCTA from '../sections/PortfolioCTA.astro';

---

<BaseLayout>
<section class="portfolio" id="portfolio">
  <div class="portfolio__inner">

    <div class="portfolio__header">
      <p class="section-num" aria-hidden="true">07</p>
      <div class="portfolio__header-row">
        <div>
          <h2 class="portfolio__title">
            Webs bonitas hay muchas.
            <em>Estas, además, funcionan.</em>
          </h2>
          <p class="portfolio__subtitle">
            Distintos objetivos, misma obsesión: claridad, móvil perfecto y cero fricción.
            Entra al que quieras… y si aparece un bichito, aplástalo.
          </p>
        </div>
        <a href="/portfolio" class="portfolio__ver-todos">
          Ver todos →
        </a>
      </div>
    </div>

    <div class="portfolio__grid">
      {featuredProjects.map((p) => (
        <a
          href={p.url}
          target="_blank"
          rel="noopener noreferrer"
          class="proyecto-card"
          aria-label={`Ver proyecto: ${p.titulo} (abre en nueva pestaña)`}
        >
          <div
            class="proyecto-card__img"
            style={`background-color: ${p.color};`}
          >
            <span class="proyecto-card__year">{p.año}</span>
            <span
              class="proyecto-card__dot"
              style={`background: ${p.colorAccent};`}
              aria-hidden="true"
            ></span>
            <div class="proyecto-card__overlay">
              <span class="proyecto-card__ver">Ver proyecto ↗</span>
            </div>
          </div>

          <div class="proyecto-card__info">
            <div class="proyecto-card__meta">
              <h3 class="proyecto-card__titulo">{p.titulo}</h3>
              <p class="proyecto-card__tipo">{p.tipo}</p>
            </div>
            <ul class="proyecto-card__tags" aria-label="Tecnologías">
              {p.tags.slice(0, 3).map((tag) => (
                <li class="proyecto-card__tag">{tag}</li>
              ))}
            </ul>
          </div>
        </a>
      ))}
    </div>

    <BugSquasher />
    <PortfolioCTA />
  </div>
</section>
</BaseLayout>
<style>
  .portfolio {
    position: relative;
    z-index: 16;
    background: #fff;
  }

  .portfolio__inner {
    max-width: 1200px;
    margin: 0 auto;
    padding: 5rem 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 3.5rem;
  }

  /* ── Cabecera ── */
  .portfolio__header-row {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .portfolio__title {
    font-family: var(--font-display);
    font-weight: 900;
    font-size: clamp(2rem, 5vw, 4rem);
    line-height: 1.05;
    letter-spacing: -0.02em;
    color: var(--color-text-dark);
    max-width: 24ch;
    margin-bottom: 0.75rem;
  }

  .portfolio__title em {
    font-style: italic;
    color: var(--color-text-mid);
  }

  .portfolio__subtitle {
    font-family: var(--font-body);
    font-size: clamp(0.95rem, 2vw, 1.05rem);
    color: var(--color-text-mid);
    max-width: 52ch;
    line-height: 1.65;
  }

  .portfolio__ver-todos {
    display: inline-flex;
    align-items: center;
    font-family: var(--font-body);
    font-size: 0.85rem;
    font-weight: 700;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: var(--color-text-dark);
    padding-bottom: 2px;
    border-bottom: 2px solid var(--color-accent-lime);
    align-self: flex-start;
    white-space: nowrap;
    transition: opacity 0.2s ease;
  }

  .portfolio__ver-todos:hover { opacity: 0.6; }

  /* ── Grid ── */
  .portfolio__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  /* ── Tarjeta ── */
  .proyecto-card {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    text-decoration: none;
  }

  .proyecto-card__img {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 10;
    border-radius: 1.5rem;
    overflow: hidden;
    display: flex;
    align-items: flex-end;
    justify-content: flex-start;
    padding: 1.25rem;
  }

  .proyecto-card__year {
    font-family: var(--font-display);
    font-size: 0.72rem;
    font-weight: 700;
    letter-spacing: 0.18em;
    color: rgba(26, 10, 46, 0.35);
    text-transform: uppercase;
    position: absolute;
    top: 1.25rem;
    left: 1.5rem;
    z-index: 1;
  }

  .proyecto-card__dot {
    position: absolute;
    top: 1.2rem;
    right: 1.5rem;
    width: 10px;
    height: 10px;
    border-radius: 50%;
    z-index: 1;
  }

  .proyecto-card__overlay {
    position: absolute;
    inset: 0;
    background: rgba(26, 10, 46, 0.72);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.25s ease;
    border-radius: inherit;
  }

  .proyecto-card:hover .proyecto-card__overlay,
  .proyecto-card:focus-visible .proyecto-card__overlay {
    opacity: 1;
  }

  .proyecto-card__ver {
    font-family: var(--font-body);
    font-size: 0.95rem;
    font-weight: 700;
    color: var(--color-accent-lime);
    letter-spacing: 0.04em;
  }

  .proyecto-card__info {
    display: flex;
    flex-direction: column;
    gap: 0.6rem;
  }

  .proyecto-card__meta {
    display: flex;
    flex-direction: column;
    gap: 0.15rem;
  }

  .proyecto-card__titulo {
    font-family: var(--font-display);
    font-size: clamp(1.2rem, 2.5vw, 1.5rem);
    font-weight: 700;
    color: var(--color-text-dark);
    line-height: 1.15;
    transition: color 0.2s ease;
  }

  .proyecto-card:hover .proyecto-card__titulo {
    color: var(--color-text-mid);
  }

  .proyecto-card__tipo {
    font-family: var(--font-body);
    font-size: 0.78rem;
    color: var(--color-text-mid);
    letter-spacing: 0.06em;
    text-transform: uppercase;
    font-weight: 500;
  }

  .proyecto-card__tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
    list-style: none;
  }

  .proyecto-card__tag {
    font-family: var(--font-body);
    font-size: 0.72rem;
    font-weight: 600;
    color: var(--color-text-mid);
    background: var(--color-bg-light);
    border-radius: 9999px;
    padding: 0.25em 0.75em;
    letter-spacing: 0.02em;
  }

  /* ── Tablet: 2 columnas ── */
  @media (min-width: 600px) {
    .portfolio__grid { grid-template-columns: 1fr 1fr; }
  }

  @media (min-width: 768px) {
    .portfolio__inner { padding: 7rem 4rem; }
    .portfolio__header-row {
      flex-direction: row;
      align-items: flex-end;
      justify-content: space-between;
    }
    .portfolio__ver-todos { align-self: flex-end; }
  }
</style>