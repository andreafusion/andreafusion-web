---
// src/sections/LogosSection.astro
// Prueba social / logos. Placeholders preparados para sustituir con logos reales.
// PROFUNDIDAD: fondo blanco tintado (--color-bg-white) + grain sutil.
---

<section class="logos has-grain" id="confianza">
  <div class="logos__inner">

    <div class="logos__header">
      <p class="section-num" aria-hidden="true">03</p>
      <h2 class="logos__title">
        Marcas que confían en procesos<br>
        <em>claros y diseño con intención.</em>
      </h2>
      <p class="logos__subtitle">
        He trabajado creando experiencias digitales donde la estética
        y la funcionalidad tienen el mismo peso.
      </p>
    </div>

    <!-- Tira de logos — sustituir los SVG placeholder por logos reales -->
    <div class="logos__strip" aria-label="Clientes y colaboraciones">
      {Array.from({ length: 6 }).map((_, i) => (
        <div class="logos__item" aria-label={`Cliente ${i + 1}`}>
          <svg class="logos__placeholder" viewBox="0 0 120 40" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
            <rect x="0.5" y="0.5" width="119" height="39" rx="6" stroke="currentColor" stroke-opacity="0.2"/>
            <rect x="10" y="16" width="40" height="8" rx="3" fill="currentColor" fill-opacity="0.18"/>
            <rect x="56" y="12" width="54" height="6" rx="3" fill="currentColor" fill-opacity="0.12"/>
            <rect x="56" y="22" width="38" height="5" rx="2.5" fill="currentColor" fill-opacity="0.08"/>
          </svg>
        </div>
      ))}
    </div>

    <p class="logos__note" aria-hidden="true">[ Logos reales próximamente ]</p>

  </div>
</section>

<style>
  .logos {
    position: relative;
    z-index: 12;
    /*
      Blanco tintado: no es blanco puro.
      Tiene un tinte lila muy sutil que lo conecta visualmente
      con el resto de la paleta (lila, uva).
      En móvil OLED se percibe claramente frente a un blanco puro.
    */
    background: var(--color-bg-white);
    will-change: transform;
  }

  /* El contenido necesita z-index > 0 para quedar sobre el grain (::before z-index: 0) */
  .logos__inner {
    position: relative;
    z-index: 1;
    max-width: 1200px;
    margin: 0 auto;
    padding: 5rem 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .logos__header {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .section-num {
    font-family: var(--font-body);
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.25em;
    color: var(--color-accent-pink);
    text-transform: uppercase;
  }

  .logos__title {
    font-family: var(--font-display);
    font-weight: 900;
    font-size: clamp(1.8rem, 4.5vw, 3.2rem);
    line-height: 1.1;
    letter-spacing: -0.02em;
    color: var(--color-text-dark);
    max-width: 22ch;
  }

  .logos__title em {
    font-style: italic;
    color: var(--color-text-mid);
  }

  .logos__subtitle {
    font-family: var(--font-body);
    font-size: clamp(0.95rem, 2vw, 1.05rem);
    line-height: 1.65;
    color: var(--color-text-mid);
    max-width: 52ch;
  }

  /* ── Strip de logos ── */
  .logos__strip {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    align-items: center;
  }

  .logos__item {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem;
  }

  .logos__placeholder {
    width: 100%;
    max-width: 120px;
    height: auto;
    color: var(--color-text-dark);
    opacity: 0.35;
  }

  /* ── Nota de desarrollo ── */
  .logos__note {
    font-family: var(--font-body);
    font-size: 0.7rem;
    letter-spacing: 0.1em;
    color: var(--color-accent-pink);
    text-align: center;
    opacity: 0.6;
  }

  /* ── Desktop ── */
  @media (min-width: 768px) {
    .logos__inner { padding: 6rem 4rem; }
    .logos__strip { grid-template-columns: repeat(6, 1fr); }
  }
</style>