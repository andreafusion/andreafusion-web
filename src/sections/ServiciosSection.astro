---
// src/sections/ServiciosSection.astro
// Fondo lila suave. Tres servicios numerados 01/02/03.
// Cards que se abren al hover/tap con descripción.

interface Servicio {
  num: string;
  titulo: string;
  desc: string;
  href: string;
}

const servicios: Servicio[] = [
  {
    num: '01',
    titulo: 'Auditoría web',
    desc: 'Reviso tu web actual y te entrego mejoras claras en diseño, estructura y experiencia móvil. Ideal si sientes que tu página no refleja lo que ya eres.',
    href: '/contacto#auditoria',
  },
  {
    num: '02',
    titulo: 'Landing estratégica',
    desc: 'Diseño y desarrollo una landing ligera, estética y optimizada para convertir visitas en conversaciones reales. Pensada para lanzamientos, servicios o marcas personales.',
    href: '/contacto#landing',
  },
  {
    num: '03',
    titulo: 'Web personalizada',
    desc: 'Creamos juntas una web completa, diseñada a medida y desarrollada con foco en rendimiento, claridad y personalidad. Nada genérico, todo alineado contigo.',
    href: '/contacto#web',
  },
];
---

<section class="servicios" id="servicios">
  <div class="servicios__inner">

    <div class="servicios__header">
      <p class="section-num" aria-hidden="true">05</p>
      <h2 class="servicios__title">
        Trabajo contigo desde una mirada<br>
        <em>estratégica, creativa y técnica.</em>
      </h2>
      <p class="servicios__intro">
        Elige el nivel que mejor encaje contigo ahora mismo.
      </p>
    </div>

    <div class="servicios__list">
      {servicios.map((s) => (
        <article class="servicio-card">
          <div class="servicio-card__top">
            <span class="servicio-card__num" aria-hidden="true">{s.num}</span>
            <h3 class="servicio-card__titulo">{s.titulo}</h3>
            <span class="servicio-card__arrow" aria-hidden="true">↗</span>
          </div>
          <p class="servicio-card__desc">{s.desc}</p>
          <a href={s.href} class="servicio-card__link">
            <span>Quiero saber más</span>
          </a>
        </article>
      ))}
    </div>

  </div>
</section>

<style>
  .servicios {
    position: relative;
    z-index: 14;
    background: var(--color-bg-light);
  }

  .servicios__inner {
    max-width: 1200px;
    margin: 0 auto;
    padding: 5rem 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 3.5rem;
  }

  .section-num {
    font-family: var(--font-body);
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.25em;
    color: var(--color-accent-pink);
    text-transform: uppercase;
    display: block;
    margin-bottom: 1rem;
  }

  .servicios__title {
    font-family: var(--font-display);
    font-weight: 900;
    font-size: clamp(2rem, 5vw, 4rem);
    line-height: 1.05;
    letter-spacing: -0.02em;
    color: var(--color-text-dark);
    max-width: 24ch;
  }

  .servicios__title em {
    font-style: italic;
    color: var(--color-text-mid);
  }

  .servicios__intro {
    font-family: var(--font-body);
    font-size: clamp(0.95rem, 2vw, 1.05rem);
    color: var(--color-text-mid);
    max-width: 46ch;
    line-height: 1.65;
    margin-top: 0.75rem;
  }

  /* ── Lista de servicios ── */
  .servicios__list {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  /* ── Tarjeta de servicio ── */
  .servicio-card {
    padding: 2rem 0;
    border-bottom: 1.5px solid rgba(90, 58, 122, 0.12);
    display: flex;
    flex-direction: column;
    gap: 1rem;
    transition: background 0.2s ease;
    cursor: default;
  }

  .servicio-card:first-child {
    border-top: 1.5px solid rgba(90, 58, 122, 0.12);
  }

  .servicio-card:hover {
    background: rgba(200, 241, 53, 0.06);
    padding-left: 1rem;
    padding-right: 1rem;
    margin-left: -1rem;
    margin-right: -1rem;
    border-radius: 1rem;
  }

  /* ── Top row: num + título + flecha ── */
  .servicio-card__top {
    display: flex;
    align-items: center;
    gap: 1.25rem;
  }

  .servicio-card__num {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 900;
    color: var(--color-accent-pink);
    line-height: 1;
    flex-shrink: 0;
    opacity: 0.7;
    transition: opacity 0.2s ease;
  }

  .servicio-card:hover .servicio-card__num {
    opacity: 1;
    color: var(--color-accent-lime);
    /* lime cuando está activo */
  }

  .servicio-card__titulo {
    font-family: var(--font-display);
    font-weight: 700;
    font-size: clamp(1.4rem, 3.5vw, 2.2rem);
    color: var(--color-text-dark);
    line-height: 1.1;
    flex: 1;
  }

  .servicio-card__arrow {
    font-size: 1.5rem;
    color: var(--color-text-mid);
    opacity: 0;
    transform: translate(-4px, 4px);
    transition: opacity 0.2s ease, transform 0.2s ease;
  }

  .servicio-card:hover .servicio-card__arrow {
    opacity: 1;
    transform: translate(0, 0);
  }

  /* ── Descripción ── */
  .servicio-card__desc {
    font-family: var(--font-body);
    font-size: clamp(0.95rem, 2vw, 1.05rem);
    line-height: 1.7;
    color: var(--color-text-mid);
    max-width: 60ch;
    /* En móvil siempre visible; en desktop también — simplificamos sin toggle */
  }

  /* ── Link ── */
  .servicio-card__link {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    font-family: var(--font-body);
    font-size: 0.85rem;
    font-weight: 700;
    color: var(--color-text-dark);
    letter-spacing: 0.05em;
    text-transform: uppercase;
    text-decoration: none;
    align-self: flex-start;
    padding-bottom: 2px;
    border-bottom: 2px solid var(--color-accent-lime);
    transition: gap 0.2s ease, color 0.2s ease;
  }

  .servicio-card__link:hover {
    gap: 0.7rem;
    color: var(--color-text-mid);
  }

  /* ── Desktop ── */
  @media (min-width: 768px) {
    .servicios__inner { padding: 7rem 4rem; }
  }

  @media (min-width: 1024px) {
    .servicios__list {
      display: grid;
      grid-template-columns: 1fr;
    }
  }
</style>