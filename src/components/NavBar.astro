---
// src/components/NavBar.astro
// Nav fija. Transparente sobre el hero, fondo sólido al hacer scroll.
---

<nav class="nav" id="main-nav" aria-label="Navegación principal">
  <a href="/" class="nav__logo" aria-label="AndreaFusion — inicio">
    <span class="nav__logo-af">AF</span>
    <span class="nav__logo-text">AndreaFusion</span>
  </a>

  <ul class="nav__links" role="list">
    <li><a href="/portfolio" class="nav__link">Portfolio</a></li>
    <li><a href="/sobre-mi"  class="nav__link">Sobre mí</a></li>
    <li>
      <a href="/contacto" class="nav__link nav__link--cta">
        Trabajemos juntas
      </a>
    </li>
  </ul>

  <!-- Botón hamburguesa para móvil -->
  <button class="nav__burger" aria-label="Abrir menú" aria-expanded="false" aria-controls="nav-mobile">
    <span></span><span></span><span></span>
  </button>
</nav>

<!-- Menú móvil -->
<div class="nav-mobile" id="nav-mobile" aria-hidden="true">
  <ul role="list">
    <li><a href="/portfolio">Portfolio</a></li>
    <li><a href="/sobre-mi">Sobre mí</a></li>
    <li><a href="/contacto">Trabajemos juntas</a></li>
  </ul>
</div>

<script>
  const nav     = document.getElementById('main-nav')!;
  const burger  = nav.querySelector<HTMLButtonElement>('.nav__burger')!;
  const mobile  = document.getElementById('nav-mobile')!;

  // Scroll: añade clase .is-scrolled a partir de 60px
  const onScroll = () => {
    nav.classList.toggle('is-scrolled', window.scrollY > 60);
  };
  window.addEventListener('scroll', onScroll, { passive: true });
  onScroll();

  // Hamburguesa
  burger.addEventListener('click', () => {
    const open = burger.getAttribute('aria-expanded') === 'true';
    burger.setAttribute('aria-expanded', String(!open));
    mobile.setAttribute('aria-hidden', String(open));
    mobile.classList.toggle('is-open', !open);
    document.body.classList.toggle('nav-open', !open);
  });

  // Cerrar al hacer click en enlace
  mobile.querySelectorAll('a').forEach(a => {
    a.addEventListener('click', () => {
      burger.setAttribute('aria-expanded', 'false');
      mobile.setAttribute('aria-hidden', 'true');
      mobile.classList.remove('is-open');
      document.body.classList.remove('nav-open');
    });
  });
</script>

<style>
  /* ── Base ── */
  .nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.2rem 1.5rem;
    transition: background 0.3s ease, backdrop-filter 0.3s ease, padding 0.3s ease;
  }

  .nav.is-scrolled {
    background: rgba(61, 26, 92, 0.92);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    padding: 0.9rem 1.5rem;
    box-shadow: 0 2px 24px rgba(0,0,0,0.18);
  }

  /* ── Logo ── */
  .nav__logo {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    text-decoration: none;
  }

  .nav__logo-af {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    background: var(--color-accent-lime);
    color: var(--color-text-dark);
    font-family: var(--font-display);
    font-weight: 900;
    font-size: 0.75rem;
    border-radius: 8px;
    letter-spacing: -0.02em;
    flex-shrink: 0;
  }

  .nav__logo-text {
    font-family: var(--font-body);
    font-weight: 700;
    font-size: 0.9rem;
    color: var(--color-text-hero);
    letter-spacing: 0.01em;
  }

  /* ── Links desktop ── */
  .nav__links {
    display: none;
    list-style: none;
    gap: 2rem;
    align-items: center;
  }

  .nav__link {
    font-family: var(--font-body);
    font-size: 0.85rem;
    font-weight: 500;
    color: rgba(245, 238, 230, 0.85);
    letter-spacing: 0.03em;
    transition: color 0.2s ease;
    position: relative;
  }

  .nav__link::after {
    content: '';
    position: absolute;
    bottom: -3px;
    left: 0;
    width: 0;
    height: 1.5px;
    background: var(--color-accent-lime);
    transition: width 0.25s ease;
  }

  .nav__link:hover { color: var(--color-text-hero); }
  .nav__link:hover::after { width: 100%; }

  .nav__link--cta {
    background: var(--color-accent-lime);
    color: var(--color-text-dark) !important;
    padding: 0.5em 1.3em;
    border-radius: 9999px;
    font-weight: 700;
    transition: transform 0.18s ease, box-shadow 0.18s ease;
  }
  .nav__link--cta::after { display: none; }
  .nav__link--cta:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 16px rgba(200, 241, 53, 0.4);
  }

  /* ── Burger ── */
  .nav__burger {
    display: flex;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 4px;
  }

  .nav__burger span {
    display: block;
    width: 22px;
    height: 2px;
    background: var(--color-text-hero);
    border-radius: 2px;
    transition: transform 0.25s ease, opacity 0.25s ease;
    transform-origin: center;
  }

  .nav__burger[aria-expanded="true"] span:nth-child(1) {
    transform: translateY(7px) rotate(45deg);
  }
  .nav__burger[aria-expanded="true"] span:nth-child(2) {
    opacity: 0;
  }
  .nav__burger[aria-expanded="true"] span:nth-child(3) {
    transform: translateY(-7px) rotate(-45deg);
  }

  /* ── Menú móvil ── */
  .nav-mobile {
    position: fixed;
    inset: 0;
    z-index: 99;
    background: var(--color-bg-hero);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    pointer-events: none;
    transform: translateY(-8px);
    transition: opacity 0.25s ease, transform 0.25s ease;
  }

  .nav-mobile.is-open {
    opacity: 1;
    pointer-events: all;
    transform: translateY(0);
  }

  .nav-mobile ul {
    list-style: none;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    padding: 0;
  }

  .nav-mobile a {
    font-family: var(--font-display);
    font-size: clamp(2rem, 8vw, 3rem);
    font-weight: 900;
    color: var(--color-text-hero);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .nav-mobile a:hover { color: var(--color-accent-lime); }

  body.nav-open { overflow: hidden; }

  /* ── Desktop 768px+ ── */
  @media (min-width: 768px) {
    .nav__links { display: flex; }
    .nav__burger { display: none; }
    .nav { padding: 1.4rem 3rem; }
    .nav.is-scrolled { padding: 1rem 3rem; }
  }
</style>